{
    "version": "1.0.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noEmitOnError": true,
        "noLib": false,
        "sourceMap": true,
        "diagnostics": false,
        "outDir": "./bin"
    },
    "filesGlob": [
        "*/**/*.ts",
        "!node_modules/**"
    ],
    "files": [
        "lib/multi-storage.ts",
        "test/test.ts",
        "typings/mocha/mocha.d.ts",
        "typings/node/node.d.ts",
        "typings/tsd.d.ts"
    ]
}
